package Analizadores;
import static Analizadores.Tokens.*;
import java_cup.runtime.*;
import java.io.Reader;
%%
%class lexico_cjs
%{
public static String errores="";
    private Symbol Symbol(int type){
        return new Symbol(type ,yyline, yycolumn);
    }
    private Symbol Symbol(int type, Object value){
        return new Symbol(type, yyline, yycolumn, value);
    }

    public static void errorLexico(String error,int x, int y ){
       errores+="error lexico \""+error+"\" en linea: "+Integer.toString(y)+" colulmna: "+Integer.toString(x)+"\n";
    }
%}
%public
%cup
%ignorecase
%line
%column
Comentario_simple = [//][^][\n]
Comentario_multiple = [/*][^][*/]
Lineterminada = [\r|\n|\r\n]
WhiteSpace = ({Lineterminada} | [ \t\f]|[ |\t|\r|\f|\n])+
Comillas = [\"] [^][\"]
%%
{WhiteSpace} {/*Ignore*/}
(Comentario_multiple|Comentario_simple) {/*Ignore*/}
"+"											{return new Symbol(symc.SMAS,yyline,yycolumn);}
"-"											{return new Symbol(symc.SMEN,yyline,yycolumn);}
"*"											{return new Symbol(symc.SMUL,yyline,yycolumn);}
":"											{return new Symbol(symc.SDPU,yyline,yycolumn);}
";"											{return new Symbol(symc.SPYC,yyline,yycolumn);}
","											{return new Symbol(symc.SCOM,yyline,yycolumn);}
"="											{return new Symbol(symc.SIGU,yyline,yycolumn);}
"/"											{return new Symbol(symc.SDIV,yyline,yycolumn);}
"["											{return new Symbol(symc.SICO,yyline,yycolumn);}
"]"											{return new Symbol(symc.SFCO,yyline,yycolumn);}
"("											{return new Symbol(symc.SIPA,yyline,yycolumn);}
")"											{return new Symbol(symc.SFPA,yyline,yycolumn);}
"ID"										{return new Symbol(symc.RID,yyline,yycolumn);}
"TEXTO"										{return new Symbol(symc.RTEX,yyline,yycolumn);}
"Letra"										{return new Symbol(symc.RLET,yyline,yycolumn);}
"Grupo"										{return new Symbol(symc.RGRU,yyline,yycolumn);}
"Borde"										{return new Symbol(symc.RBOR,yyline,yycolumn);}
"Opaque"									{return new Symbol(symc.ROPA,yyline,yycolumn);}
"Tamtext"									{return new Symbol(symc.RTAM,yyline,yycolumn);}
"Visible"									{return new Symbol(symc.RVIS,yyline,yycolumn);}
"Formato"									{return new Symbol(symc.RFOR,yyline,yycolumn);}
"Derecha"									{return new Symbol(symc.RDER,yyline,yycolumn);}
"Cursiva"									{return new Symbol(symc.RCUR,yyline,yycolumn);}
"Vertical"									{return new Symbol(symc.RVER,yyline,yycolumn);}
"Centrado"									{return new Symbol(symc.RCEN,yyline,yycolumn);}
"Negrilla"									{return new Symbol(symc.RNEG,yyline,yycolumn);}
"Alineado"									{return new Symbol(symc.RALI,yyline,yycolumn);}
"Izquierda"									{return new Symbol(symc.RIZQ,yyline,yycolumn);}
"Mayuscula"									{return new Symbol(symc.RMAY,yyline,yycolumn);}
"Minuscula"									{return new Symbol(symc.RMIN,yyline,yycolumn);}
"Capital-T"									{return new Symbol(symc.RCAP,yyline,yycolumn);}
"COLORTEXT"									{return new Symbol(symc.RCOL,yyline,yycolumn);}
"Horizontal"								{return new Symbol(symc.RHOR,yyline,yycolumn);}
"Justificado"								{return new Symbol(symc.RJUS,yyline,yycolumn);}
"Fondoelemento"								{return new Symbol(symc.RFEL,yyline,yycolumn);}
"Autoredimension"							{return new Symbol(symc.RAUR,yyline,yycolumn);}
([+|-]?[0-9]+)								{return new Symbol(symc.PNUM,yyline,yycolumn);}	
{Comillas}									{return new Symbol(symc.PCOM,yyline,yycolumn,yytext());}
((a-Z)[.]~[ ,\n])							{return new Symbol(symc.PID,yyline, yycolumn,yytext());}
.   { System.out.println("Caracter Invalido: "+yytext()+" Linea: "+ (int)(yyline+1)+" columa:"+(int)yycolumn+";");}